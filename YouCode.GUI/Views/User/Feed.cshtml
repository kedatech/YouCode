@* @using YouCode.BL *@
@model IEnumerable<YouCode.BE.Post>
@{
    ViewData["Title"] = "Feed";
}
<body>

<div class="container">
    <h1>Posts</h1>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Content</p>
                        @* <p class="card-text"><small class="text-muted">@po</small></p> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

</body>
</html>
