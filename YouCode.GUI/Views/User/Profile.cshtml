@* @page "/perfil" *@
@model YouCode.GUI.Models.DTOs.ProfileReturnDto

@{
    ViewBag.Title = @Model.Profile.User.Name;
}


<main class="max-w-2xl mx-auto">
    <div class="relative w-full my-10 bg-white rounded-md border shadow-md p-5">
        <div class="relative">
            <button id="openModal" hidden
                class="absolute m-1 top-0 right-0 text-gray-700 px-3 py-2 rounded-lg border border-gray-300 text-sm font-semibold transition-all duration-300 hover:bg-green-600 hover:text-white hover:border-transparent">Editar
                perfil</button>

        </div>
