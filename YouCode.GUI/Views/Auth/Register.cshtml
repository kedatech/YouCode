@using YouCode.GUI.Models;
@model YouCode.GUI.Models.AuthModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>
<p>Create a new account.</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <p>Or sign in using:</p>
    <a class="btn btn-secondary" href="https://github.com/login/oauth/authorize?client_id=@ViewBag.ClientId&redirect_uri=@ViewBag.RedirectUrl&scope=user:email">
        <i class="bi bi-github" role="img" aria-label="GitHub"></i> Sign in with GitHub
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
