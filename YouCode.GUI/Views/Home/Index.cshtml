        $('#submitBtn').click(function () {
            // Obtenemos los valores de los campos
            var postTitle = $('#PostTitleInput').val();
            var postContent = $('#PostContentInput').val();
            console.log(postTitle);
            if (postTitle.trim() === "" || postContent.trim() === "") {
