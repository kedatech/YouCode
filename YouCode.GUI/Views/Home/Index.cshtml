                    {
                        bool found = false;
                        foreach (var postHtml in ViewBag.PostsHtml)
                        {
                            if (postHtml.Id == post.Id)
                            {

                                <div class="p-4 h-24 overflow-auto">
                                    <p class="">@Html.Raw(postHtml.ContentHtml)</p>
                                </div>


                                found = true;
                                break;
                            }
                        }
                        if (!found)
                        {
                            <p class="text-[12px]">@post.Content</p>
                        }
                    }
                    else
                    {
                        <p class="text-[12px]">@post.Content</p>
                    }
