@* @page "/perfil" *@
@model Octokit.User

@{
    ViewBag.Title = "Contact";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.AvatarUrl" class="img-fluid rounded-circle mb-3" style="max-width: 200px;" alt="Foto de perfil">
            <h2>@Model.Login</h2>
        </div>
        <div class="col-md-8">
            <h3>Información de perfil</h3>
            <ul class="list-group">
                <li class="list-group-item">Nombre: @Model.Name</li>
                <li class="list-group-item">Biografía: @Model.Bio</li>
                <li class="list-group-item">Ubicación: @Model.Location</li>
            </ul>
            <h3>Estadísticas</h3>
            <ul class="list-group">
                <li class="list-group-item">@Model.Followers Seguidores</li>
                <li class="list-group-item">@Model.Following Seguidos</li>
                <li class="list-group-item">Repositorios Públicos: @Model.PublicRepos</li>
                <li class="list-group-item">Repositorios Privados: @Model.OwnedPrivateRepos</li>
            </ul>
        </div>

    </div>
</div>
